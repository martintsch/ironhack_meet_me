<h1>Locations</h1>
<ul>
  <% @locations.each do |location| %>
   <li>
     <% if location.name.present? %>
        <%= link_to location.name, location_visits_path(location) %> -
        <%= location.city %>
      <% else %>
        <%= link_to location.city, location_visits_path(location) %>
      <% end %>
    </li>
  <% end %>
</ul>
