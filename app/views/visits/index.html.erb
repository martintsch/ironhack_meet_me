<% headline = @location.name.present? ? @location.name : @location.city %>

<h2><%= link_to headline, location_path(@location) %></h2>
<p>
  Visits this month: <%= @visits.count %>
  <%= link_to "Add Visit", new_location_visit_path(@location) %>
</p>
<ul>
  <% @visits.each do |visit| %>
    <li>
      <%= visit.user_name %>
      <%= link_to 'edit', edit_location_visit_path(location_id: @location.id, id: visit.id) %>
      <%= link_to 'delete', location_visit_path(@location, visit), method: 'delete', confirm: "Are you sure?" %>
      <br/>From: <%= visit.from_date %>
      <br/>To: <%= visit.to_date %>
    </li>
  <% end %>
</ul>
